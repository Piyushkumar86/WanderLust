<% layout("/layouts/boilerplate") %>

<style>
  /* Fixed Animated 3D Gradient Blobs Background */
  body {
    margin: 0;
    min-height: 100vh;
    overflow-x: hidden;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    position: relative;
  }

  .bg-blobs {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
  }
  .blob {
    position: absolute;
    border-radius: 42% 58% 38% 62% / 59% 37% 63% 41%;
    filter: blur(100px);
    opacity: 0.85;
    mix-blend-mode: screen;
    animation: blobmove 14s infinite linear alternate;
  }
  .blob1 {
    width: 600px; height: 620px;
    left: -120px; top: -120px;
    background: linear-gradient(135deg, #ff416c 40%, #ff4b2b 100%);
    animation-delay: 0s;
  }
  .blob2 {
    width: 430px; height: 480px;
    right: -120px; top: 120px;
    background: linear-gradient(120deg, #52e5e7 40%, #130cb7 100%);
    animation-delay: 4s;
  }
  .blob3 {
    width: 330px; height: 350px;
    left: 65%; top: 60%;
    background: linear-gradient(110deg, #ffe580, #ff6e7f 60%);
    animation-delay: 8s;
  }
  @keyframes blobmove {
    0% { transform: scale(1) rotate(0deg) translateY(0); }
    50% { transform: scale(1.07) rotate(40deg) translateY(40px); }
    100% { transform: scale(1) rotate(0deg) translateY(0);}
  }

  /* Center form container */
  .container {
    width: 100%;
    max-width: 650px;
    margin: 0 auto;
    margin-top: 56px;
    margin-bottom: 56px;
    position: relative;
    z-index: 1;
  }
  h3 {
    color: #fff;
    font-weight: 700;
    font-size: 2.8rem;
    text-align: center;
    margin-bottom: 30px;
    text-shadow: 2px 2px 10px #ff416c88;
    animation: fadeSlideIn 0.8s ease forwards;
    opacity: 0;
    transform: translateY(20px);
  }
  @keyframes fadeSlideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  /* 3D animated form */
  form {
    background: rgba(32,32,32,0.96);
    padding: 32px 28px 40px 28px;
    border-radius: 22px;
    box-shadow: 0 16px 50px 0 #ff4b2b44, 0 2px 24px #000d;
    opacity: 0;
    animation: fadeScaleIn 1s forwards;
    animation-delay: 0.4s;
    transform: scale(0.97);
    backdrop-filter: blur(2px);
  }
  @keyframes fadeScaleIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  label.form-label {
    color: #eee;
    font-weight: 600;
    margin-bottom: 8px;
    font-size: 1rem;
    display: block;
  }
  input[type="text"],
  input[type="number"],
  input[type="file"],
  textarea {
    width: 100%;
    padding: 14px 18px;
    margin-bottom: 24px;
    font-size: 1.1rem;
    border-radius: 10px;
    border: 2px solid #444;
    background: #222;
    color: #fafafa;
    outline: none;
    transition: border-color 0.25s, box-shadow 0.25s;
    box-shadow: 0 1px 12px #0004;
  }
  input:focus,
  textarea:focus {
    border-color: #ff416c;
    box-shadow: 0 0 20px #ff416c99;
    background: #111;
  }
  .valid-feedback,
  .invalid-feedback {
    font-weight: 600;
    font-size: 0.93rem;
    margin-top: -16px;
    margin-bottom: 14px;
  }
  .valid-feedback {
    color: #4dd14d;
  }
  .invalid-feedback {
    color: #ff5c5c;
  }
  /* Row input spacing */
  .row .mb-3 {
    margin-bottom: 30px;
  }
  button.add-btn {
    background-color: #ff416c;
    border: none;
    color: white;
    font-weight: 700;
    font-size: 1.2rem;
    padding: 14px 28px;
    border-radius: 35px;
    letter-spacing: 1.15px;
    cursor: pointer;
    box-shadow: 0 8px 35px #ff416c88;
    transition: background 0.3s, box-shadow 0.4s, transform 0.3s;
    width: 100%;
    margin-top: 8px;
  }
  button.add-btn:hover {
    background: linear-gradient(90deg,#ff6e7f 40%, #ff416c 100%);
    box-shadow: 0 16px 60px #ff416cbb;
    transform: scale(1.04);
  }
  /* Responsive */
  @media (max-width: 770px) {
    .container {
      margin-top: 24px !important;
      margin-bottom: 24px !important;
      box-sizing: border-box;
      padding-left: 6px;
      padding-right: 6px;
    }
    h3 { font-size: 2.1rem; margin-bottom: 20px; }
    form { padding: 18px 10px 28px 10px;}
  }
</style>

<div class="bg-blobs">
  <div class="blob blob1"></div>
  <div class="blob blob2"></div>
  <div class="blob blob3"></div>
</div>

<div class="container">
  <h3>Create a New Listing</h3>
  <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >

    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required />
      <div class="valid-feedback">Title looks Good</div>
      <div class="invalid-feedback">Add the Title</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control" required></textarea>
      <div class="invalid-feedback">Please add Description</div>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input name="listing[image]" type="file" class="form-control" required/>
    </div>
    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="Enter price" class="form-control" type="number" required />
        <div class="invalid-feedback">Please enter valid Number</div>
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="Enter country" class="form-control" required />
        <div class="invalid-feedback">Please enter the Country</div>
      </div>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required />
      <div class="invalid-feedback">Please enter the Location</div>
    </div>
    <button type="submit" class="btn add-btn mt-3">Add</button>
  </form>
</div>

