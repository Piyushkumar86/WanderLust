<% layout("/layouts/boilerplate") %>

<style>
  /* 3D animated gradient blob background */
  body {
    margin: 0;
    min-height: 100vh;
    background: #121212;
    overflow-x: hidden;
    perspective: 1000px;
    position: relative;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  body::before, body::after {
    content: "";
    position: fixed;
    top: -20%;
    left: -20%;
    width: 60vw;
    height: 60vw;
    background: linear-gradient(135deg, #ff416c, #ff4b2b);
    border-radius: 50%;
    filter: blur(160px);
    animation: blobMove 15s ease-in-out infinite alternate;
    transform-origin: center center;
    z-index: -1;
    opacity: 0.7;
  }
  body::after {
    left: auto;
    right: -20%;
    top: 30%;
    background: linear-gradient(45deg, #1fa2ff, #12d8fa, #a6ffcb);
    filter: blur(140px);
    animation-delay: 7.5s;
    opacity: 0.6;
  }
  @keyframes blobMove {
    0% {
      transform: translate3d(0, 0, 0) rotate3d(0,0,1,0deg) scale(1);
    }
    50% {
      transform: translate3d(50px, 80px, 50px) rotate3d(1,1,0,45deg) scale(1.15);
    }
    100% {
      transform: translate3d(0, 0, 0) rotate3d(0,0,1,360deg) scale(1);
    }
  }

  /* Container animation */
  .show-card {
    animation: fadeInScale 0.6s ease forwards;
    opacity: 0;
    transform: scale(0.95);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    border-radius: 18px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    background: #fff;
  }
  .show-card:hover {
    box-shadow: 0 15px 50px rgba(0,0,0,0.25);
    transform: scale(1.04);
  }
  @keyframes fadeInScale {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Image styling with 3D hover effect */
  .show-img {
    border-radius: 18px 18px 0 0;
    width: 100%;
    height: auto;
    box-shadow: inset 0 0 18px rgba(0,0,0,0.1);
    transition: transform 0.4s ease, box-shadow 0.3s ease;
    will-change: transform;
    cursor: pointer;
  }
  .show-img:hover {
    transform: perspective(900px) rotateY(6deg) rotateX(3deg) scale(1.05);
    box-shadow: inset 0 0 30px rgba(0,0,0,0.18), 0 6px 40px rgba(0,0,0,0.3);
  }

  /* Card text fade-in with delay */
  .card-text {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #222;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    opacity: 0;
    animation: fadeTextIn 0.8s forwards;
  }
  .card-body p:nth-child(1) { animation-delay: 0.25s; }
  .card-body p:nth-child(2) { animation-delay: 0.5s; }
  .card-body p:nth-child(3) { animation-delay: 0.75s; }
  .card-body p:nth-child(4) { animation-delay: 1s; }
  .card-body p:nth-child(5) { animation-delay: 1.25s; }
  
  @keyframes fadeTextIn {
    to { opacity: 1; }
  }

  /* Title styling */
  h3 {
    font-family: 'Segoe UI Semibold', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 700;
    font-size: 2.8rem;
    color: #222;
    letter-spacing: 0.015em;
    text-shadow: 1px 1px 3px #ccc;
    margin-bottom: 30px;
  }

  /* Buttons container */
  .btns {
    margin-top: 25px;
    display: flex;
    gap: 18px;
  }
  .btns .edit-btn {
    background-color: #ff385c;
    border: none;
    color: #fff;
    font-weight: 600;
    border-radius: 10px;
    padding: 10px 20px;
    box-shadow: 0 8px 20px #ff385c66;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .btns .edit-btn:hover {
    background-color: #d90429;
    box-shadow: 0 12px 30px #d9042955;
    transform: translateY(-3px);
  }
  .btns form button {
    background-color: #444;
    border: none;
    color: white;
    font-weight: 600;
    border-radius: 10px;
    padding: 10px 20px;
    box-shadow: 0 8px 20px #44444477;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-left: auto;
  }
  .btns form button:hover {
    background-color: #222;
    box-shadow: 0 12px 30px #22222299;
    transform: translateY(-3px);
  }

  /* Review section styling */
  hr {
    border: none;
    border-top: 1.8px solid #eee;
    margin: 40px 0 30px 0;
  }
  h4 {
    font-weight: 700;
    font-size: 2rem;
    color: #fff;
    margin-bottom: 28px;
    text-shadow: 0 0 8px #ff385caa;
  }
  form label {
    font-weight: 600;
    color: #ddd;
    margin-bottom: 10px;
    display: block;
    font-size: 1rem;
  }
  textarea.form-control {
    border-radius: 12px;
    box-shadow: 0 3px 18px rgba(255, 56, 92, 0.3);
    font-size: 1.1rem;
    padding: 14px 16px;
    resize: vertical;
    background: #2c2c2c;
    border: 1px solid #ff385c;
    color: #eee;
  }
  textarea.form-control:focus {
    border-color: #ff6a7e;
    box-shadow: 0 0 15px #ff385caa;
    background: #3a3a3a;
    color: white;
  }
  button.btn-outline-dark {
    background: #ff385c;
    border: none;
    color: white;
    font-weight: 700;
    padding: 12px 28px;
    border-radius: 35px;
    letter-spacing: 1.15px;
    cursor: pointer;
    box-shadow: 0 8px 25px #ff385caa;
    transition: all 0.3s ease;
  }
  button.btn-outline-dark:hover {
    background: #ff6a7e;
    box-shadow: 0 12px 34px #ff6a7eaa;
  }

  /* Review cards style */
  .card.col-5.ms-3.mb-3 {
    box-shadow: 0 9px 28px rgba(255, 56, 92, 0.44);
    border-radius: 22px;
    padding: 1.0rem 1.3rem;
    transition: transform 0.35s ease, box-shadow 0.35s ease;
    background: #2c2c2c;
    color: #eee;
  }
  .card.col-5.ms-3.mb-3:hover {
    transform: scale(1.05);
    box-shadow: 0 18px 60px rgba(255, 56, 92, 0.7);
  }
  .card-title {
    color: #ff385c;
    font-weight: 700;
    letter-spacing: 0.04em;
  }
  .card-text.starability-result {
    font-size: 1.2rem;
    color: #ff385c;
    margin: 14px 0;
  }
  form.mb-3 button.btn-sm.btn-dark {
    border-radius: 60px;
    padding: 8px 16px;
    box-shadow: 0 4px 12px #ff385caa;
    background: #ff385c;
    border: none;
    color: white;
    transition: background-color 0.3s ease;
  }
  form.mb-3 button.btn-sm.btn-dark:hover {
    background-color: #ff6a7e;
  }

  /* Adjust container and offset */
  .row.mt-3 > .col-8.offset-3 {
    color: #eee;
  }
</style>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text"><strong>Owner:</strong> <%= listing.owner.username %></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>

  <br>

  <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
  <div class="btns col-6 offset-3">
    <a href="/listings/<%=listing._id %>/edit" class="edit-btn">Edit</a>
    <form method="POST" action="/listings/<%=listing._id %>?_method=DELETE">
      <button type="submit">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- Review Section -->
  <div class="col-8 offset-3 mb-3">
    
    <% if (currentUser) { %>
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
      
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please submit some comment for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
    
    <hr>

    <!-- All Reviews -->
    <% if(listing.reviews.length > 0) { %>
    <div class="row">
      <p><b>All Reviews</b></p>
      <% for(review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p class="starability-result card-text" data-rating="<%= review.rating%>"></p>
          <p class="card-text"><%= review.comment %></p>
          <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>
