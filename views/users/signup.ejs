<% layout("/layouts/boilerplate") %>

<style>
  /* Fixed animated 3D gradient blobs background */
  body {
    margin: 0;
    min-height: 100vh;
    overflow-x: hidden;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    position: relative;
    background: #121212;
  }
  .bg-blobs {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
  }
  .blob {
    position: absolute;
    border-radius: 42% 58% 38% 62% / 59% 37% 63% 41%;
    filter: blur(110px);
    opacity: 0.85;
    mix-blend-mode: screen;
    animation: blobmove 14s infinite linear alternate;
  }
  .blob1 {
    width: 530px; height: 600px;
    left: -110px; top: -110px;
    background: linear-gradient(135deg, #ff416c 40%, #ff4b2b 100%);
    animation-delay: 0s;
  }
  .blob2 {
    width: 400px; height: 430px;
    right: -100px; top: 190px;
    background: linear-gradient(120deg, #52e5e7 40%, #130cb7 100%);
    animation-delay: 4s;
  }
  .blob3 {
    width: 300px; height: 330px;
    left: 58vw; top: 62vh;
    background: linear-gradient(110deg, #ffe580, #ff6e7f 60%);
    animation-delay: 8s;
  }
  @keyframes blobmove {
    0% { transform: scale(1) rotate(0deg) translateY(0); }
    50% { transform: scale(1.07) rotate(40deg) translateY(36px); }
    100% { transform: scale(1) rotate(0deg) translateY(0);}
  }

  /* Center form container */
  .container {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    margin-top: 64px;
    margin-bottom: 64px;
    position: relative;
    z-index: 1;
  }
  h1 {
    text-align: center;
    color: #fff;
    font-weight: 800;
    font-size: 2.6rem;
    margin-bottom: 36px;
    text-shadow: 2px 2px 10px #ff416c88;
    opacity: 0;
    transform: translateY(24px);
    animation: fadeSlideIn 0.8s ease forwards;
  }
  @keyframes fadeSlideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  /* 3D animated form */
  form {
    background: rgba(32,32,32,0.96);
    padding: 32px 28px 40px 28px;
    border-radius: 20px;
    box-shadow: 0 14px 40px 0 #ff4b2b44, 0 2px 16px #000d;
    opacity: 0;
    animation: fadeScaleIn 0.9s forwards;
    animation-delay: 0.3s;
    transform: scale(0.97);
    backdrop-filter: blur(2px);
  }
  @keyframes fadeScaleIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  label.form-label {
    color: #eee;
    font-weight: 600;
    margin-bottom: 8px;
    font-size: 1rem;
    display: block;
  }
  input.form-control {
    width: 100%;
    padding: 14px 18px;
    margin-bottom: 22px;
    font-size: 1.1rem;
    border-radius: 10px;
    border: 2px solid #444;
    background: #222;
    color: #fafafa;
    outline: none;
    transition: border-color 0.25s, box-shadow 0.25s;
    box-shadow: 0 1px 12px #0004;
  }
  input.form-control:focus {
    border-color: #ff416c;
    box-shadow: 0 0 20px #ff416c99;
    background: #111;
  }
  .valid-feedback, .invalid-feedback {
    font-weight: 600;
    font-size: 0.92rem;
    margin-top: -16px;
    margin-bottom: 14px;
  }
  .valid-feedback { color: #4dd14d; }
  .invalid-feedback { color: #ff5c5c; }
  button.btn-primary {
    background-color: #ff416c;
    border: none;
    border-radius: 35px;
    padding: 14px 30px;
    width: 100%;
    font-weight: 700;
    font-size: 1.15rem;
    color: white;
    cursor: pointer;
    letter-spacing: 1.2px;
    box-shadow: 0 10px 32px #ff416cbb;
    transition: background 0.3s, box-shadow 0.3s, transform 0.3s;
    margin-top: 8px;
  }
  button.btn-primary:hover {
    background: linear-gradient(90deg,#ff6e7f 40%, #ff416c 100%);
    box-shadow: 0 16px 50px #ff416cbb;
    transform: scale(1.04);
  }

  /* Responsive */
  @media (max-width: 520px) {
    .container {
      margin-top: 32px;
      margin-bottom: 32px;
      box-sizing: border-box;
      padding-left: 6px;
      padding-right: 6px;
    }
    h1 { font-size: 2.15rem; margin-bottom: 22px; }
    form { padding: 18px 10px 28px 10px;}
  }
</style>

<!-- Animated 3D blobs background layer -->
<div class="bg-blobs">
  <div class="blob blob1"></div>
  <div class="blob blob2"></div>
  <div class="blob blob3"></div>
</div>

<div class="container">
  <h1>SignUp on WanderLust</h1>
  <form action="/signup" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" name="email" required>
      <div class="invalid-feedback">Please enter a valid email.</div>
    </div>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" id="username" name="username" required>
      <div class="valid-feedback">Looks Good</div>
      <div class="invalid-feedback">Please enter username.</div>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" required>
      <div class="invalid-feedback">Please provide a password.</div>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>
</div>
